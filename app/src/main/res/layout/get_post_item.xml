<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="382dp">

    <ImageView
        android:id="@+id/imgAvaGetPost"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        android:src="@drawable/account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleGetPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAvaGetPost"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/margin16" />

    <TextView
        android:id="@+id/tvDescGetPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAvaGetPost"
        app:layout_constraintTop_toBottomOf="@id/tvTitleGetPost"
        />

    <ImageView
        android:id="@+id/imgGetPost"
        android:layout_width="0dp"
        android:layout_height="194dp"
        android:layout_marginTop="@dimen/margin16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/main_picture"
        app:layout_constraintTop_toBottomOf="@id/tvDescGetPost"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/imgLikeGetPost"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/like"
        app:layout_constraintTop_toBottomOf="@id/imgGetPost" />

    <ImageView
        android:id="@+id/imgDislikeGetPost"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        app:layout_constraintStart_toEndOf="@+id/imgLikeGetPost"
        app:layout_constraintTop_toBottomOf="@id/imgGetPost"
        android:src="@drawable/dislike"/>

    <EditText
        android:id="@+id/etTextGetPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLikeGetPost"
        android:layout_margin="@dimen/margin16"
        android:lines="1"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
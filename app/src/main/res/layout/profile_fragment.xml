<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/account"
        android:layout_marginTop="@dimen/margin16"
        />

    <EditText
        android:id="@+id/etUsernameProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size18"
        android:lines="1"
        android:maxLines="1"
        android:hint="@string/hint_username"
        android:drawableEnd="@drawable/edit"
        android:background="@drawable/shape"
        android:gravity="start"
        android:scrollbars="vertical"
        android:padding="@dimen/standard16"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        />

    <EditText
        android:id="@+id/etPhoneProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etUsernameProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size18"
        android:lines="1"
        android:maxLines="1"
        android:hint="@string/hint_phone_number"
        android:drawableEnd="@drawable/edit"
        android:background="@drawable/shape"
        android:gravity="start"
        android:scrollbars="vertical"
        android:padding="@dimen/standard16"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/etEmailProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etPhoneProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size18"
        android:lines="1"
        android:maxLines="1"
        android:hint="@string/hint_email"
        android:drawableEnd="@drawable/edit"
        android:background="@drawable/shape"
        android:gravity="start"
        android:scrollbars="vertical"
        android:padding="@dimen/standard16"
        android:layout_marginTop="@dimen/margin16"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etInfoProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmailProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_size18"
        android:lines="5"
        android:maxLines="5"
        android:hint="@string/hint_information"
        android:drawableEnd="@drawable/edit"
        android:background="@drawable/shape"
        android:gravity="start"
        android:scrollbars="vertical"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginEnd="@dimen/margin16"
        android:padding="@dimen/standard16"
        android:layout_marginTop="@dimen/margin16"
        />

     <Button
         android:id="@+id/btnSaveProfile"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@id/etInfoProfile"
         android:layout_marginTop="@dimen/margin16"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginStart="@dimen/margin16"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginEnd="@dimen/margin16"
         android:background="@color/colorMain"
         android:text="@string/save"
         android:textColor="@android:color/white"/>

    <ProgressBar
        android:id="@+id/pbProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>